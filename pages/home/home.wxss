/* pages/home/home.wxss */
@import '/assets/css/global.wxss';

.header,
.main .footer {
  position: relative;
  width: 100%;
}

.header {
  z-index: 9999;
}

.search-bar {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
  margin: 24rpx 12rpx;
  border-radius: 8rpx;
  background-color: #F7F8FA;
}

.search-bar .icon {
  padding: 12rpx 12rpx;
}

.search-bar .input-field {
  width: 100%;
  height: 38rpx;
  font-size: 24rpx;
}

.banner {
  width: 100%;
  height: 960rpx;
}

.banner .items {
  height: 960rpx;
}

.banner .cover {
  width: 100%;
  height: 960rpx;
}

.material {
  position: relative;
}

.material .cover {
  margin-top: -2rpx;
  display: block;
}