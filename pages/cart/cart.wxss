/* pages/cart/cart.wxss */
@import '/assets/css/global.wxss';
@import '/assets/css/iconfont.wxss';
@import '/pages/template/template.wxss';

.container>.header,
.container>.content,
.container>.footer {
  position: relative;
  width: 100%;
}

.container>.header {
  z-index: 999;
}

.content .header>.section {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #eee;
}

.content {
  margin-bottom: 100rpx;
}

.content .header>.section>.left {
  display: inline-flex;
  flex-flow: row nowrap;
  align-items: center;
}

.content .header>.section>.left .icon {
  font-size: 28rpx;
  color: #1B1B1B;
  margin-bottom: 12rpx;
}

.content .header>.section>.left .title {
  color: #1B1B1B;
}

.promotion {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
}

.promotion .left,
.promotion .right {
  display: inline-flex;
  flex-flow: row nowrap;
}

.promotion .tag {
  color: white;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  background-color: #B50006;
}

.promotion .title,
.promotion .icon {
  position: relative;
  font-size: 26rpx;
  color: #666666;
}

.promotion .icon {
  padding-top: 6rpx;
}

.promotion .detail {
  font-size: 26rpx;
  font-weight: bold;
}

.content .header>.section>.right .btn-edit {
  font-size: 28rpx;
  color: #666;
}

.counter {
  width: 100px;
  height: 28px;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  border: 1rpx solid #BFBFBF;
  border-radius: 6rpx;
}

.counter .count {
  min-width: 100rpx;
  color: #6A6A6A;
  border-left: 1rpx solid #BFBFBF;
  border-right: 1rpx solid #BFBFBF;
}

.counter .dec,
.counter .inc {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #A8A8A8;
}

/* pages/cart/cart.wxss */
.cart_container {
  display: flex;
  flex-direction: row;
  width: 94%;
  margin: 0 auto 24rpx auto;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid #EEE;
}

.cart_container .scroll {
  margin-bottom: 120rpx;
}

.cart_container .column {
  display: flex;
  flex-direction: column;
}

.cart_container .row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cart_container .sku {
  margin-top: 60rpx;
  margin-left: 100rpx;
}

.cart_container .sku-price {
  color: #B50006;
  position: relative;
  margin-top: 70rpx;
}

.cart_container .price {
  color: #B50006;
  position: relative;
}

.cart_container .title {
  text-align: left;
  font-size: 28rpx;
  margin-top: 40rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.cart_container .tag {
  display: inline-block;
  margin: 4rpx 0;
  padding: 2rpx 6rpx;
  font-size: 24rpx;
  border: 1rpx solid #666;
}

.cart_container .spec {
  font-size: 26rpx;
  color: #ADADAD;
}

.small_text {
  line-height: 28rpx;
  font-size: 28rpx;
  margin-right: 40rpx;
  margin-left: 10rpx;
}

.item-select {
  font-size: 42rpx;
  margin-top: 90rpx;
  margin-left: 20rpx;
  color: #EEE;
}

.item-image {
  min-width: 180rpx;
  height: 180rpx;
}

.item-active {
  color: #B50006;
}

.count-text {
  font-size: 24rpx;
  color: #BABABA;
}

.toolbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  background-color: white;
}

.toolbar .right {
  display: inline-flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
}

.toolbar .item-allselect {
  color: #EEE;
  font-size: 42rpx;
  margin-left: 20rpx;
}

.toolbar .item-active {
  color: #B50006;
}

.toolbar .price {
  color: #B50006;
  font-size: 38rpx;
  font-weight: bolder;
  padding-right: 12rpx;
}

.toolbar .bg-delete {
  background-color: #666;
}

.toolbar .bg-checkout {
  background-color: #B50006;
}

.toolbar .btn-checkout {
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: white;
  font-size: 32rpx;
  text-align: center;
}