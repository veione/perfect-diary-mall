/* pages/user/user.wxss */
@import '/assets/css/global.wxss';
@import '/assets/css/iconfont.wxss';

.container {
  background-color: #F5F5F5;
}

.profile {
  position: relative;
  height: 320rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: column nowrap;
  background-color: black;
}

.profile>.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.profile>.info {
  padding-top: 24rpx;
  color: white;
}

.profile>.info>.nickname {
  padding: 0 18rpx 0 36rpx;
}

.profile>.info>.icon-edit {
  font-size: 42rpx;
}

.profile>.header .icon {
  color: #666666;
}

.order {
  position: relative;
  width: 100%;
  background-color: white;
}

.order>.header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  flex-flow: row nowrap;
  padding: 48rpx 32rpx 24rpx 32rpx;
  color: #606060;
}

.order>.header>.right {
  font-size: 26rpx;
  color: #666666;
}

.order>.items {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  flex-flow: row nowrap;
  padding: 24rpx 48rpx;
}

.order>.items>.item {
  display: inline-flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666666;
}

.order>.items>.item>.icon {
  padding-bottom: 12rpx;
  color: black;
  font-size: 48rpx;
}

.menus {
  position: relative;
  margin-top: 24rpx;
  background-color: white;
}
.menus>.menu {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #EEEEEE;
}

.menus>.menu .icon {
  font-size: 36rpx;
}

.menus>.menu .title {
  padding-left: 12rpx;
  font-size: 28rpx;
  color: #1B1B1B;
}

.menus>.menu>.right .btn-bind {
  padding: 6rpx 12rpx;
  color: white;
  background-color: black;
}