.order-empty-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
}

.order-empty-wrapper .img {
  max-width: 240rpx;
  max-height: 240rpx;
}

.order-empty-wrapper .tips {
  color: #8A8A8A;
  font-size: 28rpx;
}

.order-empty-wrapper .btn-group {
  padding: 24rpx 0;
}

.order-empty-wrapper .btn-history {
  font-size: 24rpx;
  color: red;
  border: 2rpx solid red;
  background-color: transparent;
  border-radius: 36rpx;
}

.order-empty-wrapper .btn-shopping {
  font-size: 28rpx;
  color: white;
  padding: 18rpx 84rpx;
  background-color: black;
}
